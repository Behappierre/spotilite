{
  "name": "spotilite",
  "version": "1.0.0",
  "description": "A clean, minimal Spotify web application with full playback capabilities",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --port 8080",
    "start": "vite preview --port 8080 --host",
    "certs": "node generate-certs.js",
    "build:netlify": "NODE_ENV=production NETLIFY=true vite build"
  },
  "keywords": [
    "spotify",
    "music",
    "player",
    "web-app",
    "vanilla-js",
    "oauth",
    "playback"
  ],
  "author": "SpotiLite Team",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/spotilite.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/spotilite/issues"
  },
  "homepage": "https://github.com/yourusername/spotilite#readme"
}
